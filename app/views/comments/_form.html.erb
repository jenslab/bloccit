<% if current_user %>
  <h4>Add a comment:</h4>
  <%= form_for [@post, @post.comments.build], remote: true do |f| %>
    <%= f.text_area :body, placeholder: "Enter comment here" %>
     <div class="form-group">
    <%= f.submit "Save Comment", class: 'btn btn-success' %>
  </div>
  <% end %>
<% end %>